{
  "manifest_version": 3,

  "name": "Site Notes",
  "description": "Take notes that show up for a specific website",
  "version": "1.0",

  "icons": {
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon.png"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html"
  },

  "permissions": [ "storage", "tabs" ],

  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [
        "bootstrap.js",
        "chrome-sidebar.js",
        "notes.js",
        "search.js"
      ]
    }
  ]
}